// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/jekyll
{
  "name": "Jekyll",

  // Use docker-compose for better control over container name
  "dockerComposeFile": "docker-compose.yml",
  "service": "jekyll",
  "workspaceFolder": "/workspaces/robben-ge.github.io",

  "customizations": {
    "vscode": {
      "extensions": ["esbenp.prettier-vscode", "sissel.shopify-liquid", "yzhang.markdown-all-in-one"],
      "settings": {
        // use prettier code formatter as default formatter
        "editor.defaultFormatter": "esbenp.prettier-vscode",
        "prettier.configPath": ".prettierrc",
        "editor.formatOnSave": true
      }
    }
  }
}
